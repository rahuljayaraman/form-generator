<%= simple_form_for(@role) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :role_name %>
    <%= f.input :role_description, as: :text, input_html: {rows: 3} %>
    <%= f.input :application, as: :hidden, input_html: {value: @application.id} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save' %>
  </div>
<% end %>
