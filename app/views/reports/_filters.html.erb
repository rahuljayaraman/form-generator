<%= form_tag view_reports_path(@report), class: "form-search" do %>
  <%= fields_for :search do |s| %>
    <%= s.text_field :q, class: "input-large search-query" %>
    <%= s.text_field :from, class: "input-medium search-query datepicker", placeholder: "Created at: From" %>
    <%= s.text_field :to, class: "input-medium search-query datepicker", placeholder: "Created at: To" %>
  <% end -%>
  <%= submit_tag "Search", name: nil, class: "btn" %><br><br>
  <%= link_to " Download Xls", view_reports_path(@report, format: :xls), class: "btn btn-success icon-share" %>
<% end %>
