<%= simple_nested_form_for @source, html: {class: "form-search"} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :source_name, label: "Name your Data Source" %><br>
    <%= f.simple_fields_for :source_attributes do |m| %>
      <%= render 'sources/model_attribute_fields', f: m %>
    <% end -%>
    <%= f.link_to_add ' Add Field', :source_attributes, class: "btn btn-small icon-plus"%>
    <hr>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Data Source", class: "btn btn-primary" %>
    <%= link_to 'Back', user_path(current_user), class: "btn" %>
  </div>
<% end %>

