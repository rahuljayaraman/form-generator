<%= simple_form_for(@application) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :application_name %>
    <%= f.input :application_description, as: :text, input_html: {rows: 5} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Back', user_path(current_user), class: "btn" %>
  </div>
<% end %>
